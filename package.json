{
	"name": "inquirer-press-to-continue",
	"version": "1.0.3",
	"description": "A \"press any key to continue\" prompt for Inquirer.js",
	"license": "MIT",
	"repository": "leonzalion/inquirer-press-to-continue",
	"author": {
		"name": "Leon Si",
		"email": "contact@leonzalion.com",
		"url": "https://leonzalion.com"
	},
	"type": "module",
	"main": "index.cjs",
	"module": "index.js",
	"types": "index.d.ts",
	"scripts": {
		"release": "lionp",
		"prepare": "lion-git-hooks",
		"start": "node-ts ./src/index.ts",
		"build": "node-ts ./scripts/build.ts",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"lint": "eslint --cache --fix .",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit"
	},
	"dependencies": {
		"deep-equal": "^2.0.5",
		"inquirer": "^8.2.0",
		"ora": "^6.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@leonzalion/configs": "latest",
		"@types/deep-equal": "^1.0.1",
		"@types/inquirer": "^8.2.0",
		"@types/jest": "^27.0.3",
		"@types/node": "^17.0.0",
		"eslint": "^8.5.0",
		"execa": "^6.0.0",
		"jest": "^27.4.5",
		"jest-mock-process": "^1.4.1",
		"lint-staged": "^12.1.3",
		"lion-git-hooks": "^1.0.2",
		"lion-system": "latest",
		"lionp": "^1.0.17",
		"mock-stdin": "^1.0.0",
		"prettier": "^2.5.1",
		"ts-jest": "^27.1.2",
		"ts-jest-resolver": "^2.0.0",
		"tsc-alias": "^1.6.1",
		"tsup": "^5.11.13",
		"typescript": "^4.5.4"
	},
	"prettier": "@leonzalion/configs/prettier",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint"
		]
	},
	"lint-staged": {
		"*.{js,ts}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"resolutions": {
		"@typescript-eslint/eslint-plugin": "^5.12.1-alpha.14"
	},
	"publishConfig": {
		"directory": "dist"
	}
}
